<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/WallPaperL"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ScrollView
            android:id="@+id/scrollViewPicture"
            android:layout_width="wrap_content"
            android:paddingTop="4dp"
            android:layout_height="180dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/pictureOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/scroll_picture_one"/>
                <ImageView
                    android:id="@+id/pictureTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/scroll_picture_one"/>
                <ImageView
                    android:id="@+id/pictureThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/scroll_picture_three"/>
                <ImageView
                    android:id="@+id/pictureFour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/scroll_picture_four"/>
            </LinearLayout>


        </ScrollView>
        <LinearLayout
            android:id="@+id/WallPaperL1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:layout_height="180dp">


            <ImageButton
                android:id="@+id/pinkWallPaperT"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/pink_wall_paper"
                />
            <ImageButton
                android:id="@+id/pinkWallPaperU"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:background="@drawable/pink_wall_paper"
                />
            <ImageButton
                android:id="@+id/pinkWallPaperV"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:background="@drawable/pink_wall_paper"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/WallPaperL2"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:paddingStart="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="180dp">


            <ImageButton
                android:id="@+id/pinkWallPaper2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/pink_wall_paper"
                />
            <ImageButton
                android:id="@+id/pinkWallPaperU2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:background="@drawable/pink_wall_paper"
                />
            <ImageButton
                android:id="@+id/pinkWallPaperV2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:background="@drawable/pink_wall_paper"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/WallPaperL3"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:paddingStart="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="180dp">


            <ImageButton
                android:id="@+id/pinkWallPaper3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/pink_wall_paper"
                />
            <ImageButton
                android:id="@+id/pinkWallPaperU3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:background="@drawable/pink_wall_paper"
                />
            <ImageButton
                android:id="@+id/pinkWallPaperV3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:background="@drawable/pink_wall_paper"
                />
        </LinearLayout>


    </LinearLayout>


</ScrollView>