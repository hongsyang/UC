<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.xzt.uc.TitleLayout
        android:id="@+id/title_layout_advance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.xzt.uc.TitleLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/grey"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CCCCCC" />
    <TextView
        android:id="@+id/notice_board_tool"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="   通知栏工具"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/triangle"
        android:background="@drawable/whitebackground"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CCCCCC" />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/grey"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CCCCCC" />
    <Switch
        android:id="@+id/wifi_assistant"
        android:text="   WiFi助手"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"/>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CCCCCC" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/whitebackground">
        <TextView
            android:id="@+id/auto_install"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="   自动安装应用"/>
        <TextView
            android:id="@+id/auto_install_add"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:text="   无需点击，下载应用后自动安装"
            android:textSize="10sp"/>
        <Switch
            android:id="@+id/search_find_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CCCCCC" />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/grey"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CCCCCC" />
    <Switch
        android:id="@+id/input_method_strengthen"
        android:text="   输入法增强栏"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"/>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CCCCCC" />
    <Switch
        android:id="@+id/monitor_access_clipboard_web"
        android:text="   监听和访问剪贴板网址"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"/>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CCCCCC" />
    <Switch
        android:id="@+id/full_screen_show_system_board"
        android:text="   全屏时显示系统状态栏"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"/>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CCCCCC" />

    <Switch
        android:id="@+id/fast_access_voice_search"
        android:text="   快速进入语音搜索"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CCCCCC" />


</LinearLayout>
