<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    >

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.xzt.uc.TitleLayout
            android:id="@+id/title_layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.xzt.uc.TitleLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/grey"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <RelativeLayout
            android:id="@+id/item0"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/whitebackground">
            <TextView
                android:id="@+id/item1"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:text="   极速/省流"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:background="@drawable/whitebackground"
                />
            <TextView
                android:id="@+id/item1add"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:text="已节省0kb"
                android:textSize="10sp"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/triangle"
                android:background="@drawable/whitebackground"
                />

        </RelativeLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <TextView
            android:id="@+id/item2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="   广告过滤"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/triangle"
            android:background="@drawable/whitebackground"
            />
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <TextView
            android:id="@+id/item3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="   字体调整"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/triangle"
            android:background="@drawable/whitebackground"
            />
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <TextView
            android:id="@+id/item4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="   更换皮肤"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/triangle"
            android:background="@drawable/whitebackground"
            />
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />

        <RelativeLayout
            android:id="@+id/item5"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/whitebackground">
            <TextView
                android:id="@+id/item5text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   旋转屏幕"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:background="@drawable/whitebackground"
                />
            <TextView
                android:id="@+id/item5text2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="跟随系统"
                android:textSize="10sp"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/menu_point"
                android:background="@drawable/whitebackground"
                />

        </RelativeLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/whitebackground">
            <TextView
                android:id="@+id/item6"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="   亮度"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/whitebackground"
                />
            <ImageView
                android:id="@+id/item6_image_left"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/triangle"/>
            <SeekBar
                android:id="@+id/item6_seek"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/item6_image_left"
                />
            <ImageView
                android:id="@+id/item6_image_right"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/item6_seek"
                android:src="@drawable/triangle"/>
            <CheckBox
                android:id="@+id/item6_check"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="系统"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/item6_image_right"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/grey"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/whitebackground">
            <TextView
                android:id="@+id/item7"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="   功能提醒通知"/>
            <TextView
                android:id="@+id/item7add"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:text="   应用更新提醒，垃圾清理提醒"
                android:textSize="10sp"/>
            <Switch
                android:id="@+id/item7_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp" />

        </RelativeLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/whitebackground">
            <TextView
                android:id="@+id/item8"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:text="   资讯推送通知"/>
            <TextView
                android:id="@+id/item8add1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                android:text="   资讯推送通知"/>
            <TextView
                android:id="@+id/item8add2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:text="   您可能错过重要资讯通知，建议点击开启"
                android:visibility="invisible"
                android:textColor="#CC0033"
                android:textSize="10sp"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/grey"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <TextView
            android:id="@+id/item9"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="   下载设置"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/triangle"
            android:background="@drawable/whitebackground"
            />
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <TextView
            android:id="@+id/item10"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="   网页浏览设置"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/triangle"
            android:background="@drawable/whitebackground"
            />
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <TextView
            android:id="@+id/item11"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="   UC头条设置"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/triangle"
            android:background="@drawable/whitebackground"
            />
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <TextView
            android:id="@+id/item12"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="   高级设置"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/triangle"
            android:background="@drawable/whitebackground"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/grey"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />

        <Switch
            android:id="@+id/item13"
            android:text="   设为默认浏览器"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/whitebackground"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whitebackground">
            <TextView
                android:id="@+id/item14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   清除记录"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:background="@drawable/whitebackground"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <TextView
            android:id="@+id/item15"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="   帮助与反馈"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/triangle"
            android:background="@drawable/whitebackground"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <TextView
            android:id="@+id/item16"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="   关于UC"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/triangle"
            android:background="@drawable/whitebackground"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <TextView
            android:id="@+id/item17"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="   检查更新"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/triangle"
            android:background="@drawable/whitebackground"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/grey"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <TextView
            android:id="@+id/item18"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="恢复默认"
            android:gravity="center"
            android:background="@drawable/whitebackground"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
        <TextView
            android:id="@+id/item19"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="UC V11.7.8.958"
            android:gravity="center"
            android:background="@drawable/whitebackground"
            />
    </LinearLayout>



</ScrollView>





    